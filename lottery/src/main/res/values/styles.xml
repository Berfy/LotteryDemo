<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_app_main</item>
    </style>

    <!-- 主界面底部BUtton的样式 -->
    <style name="MainActivity_tabarButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_app_main_tab_text</item>
        <item name="android:onClick">onTabSelect</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:drawablePadding">-2dp</item>
        <item name="android:scaleType">matrix</item>
        <item name="android:textSize">@dimen/font_11</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
    </style>

    <!-- mineFragment item style -->
    <style name="MineFragment_item_textView">
        <item name="android:background">@drawable/selector_bg_white_f7f7f7</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">@dimen/space_48</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_666666</item>
    </style>

    <style name="UserInfo_item_style" parent="@style/MineFragment_item_textView">
        <item name="android:paddingLeft">0dp</item>
    </style>

    <!-- my loading dialog -->
    <style name="CustomLoadingDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <!-- popup window 显示消失动画-->
    <style name="change_header_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_change_header_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_change_header_exit</item>
    </style>

    <!-- 所有大按钮的style，比如登录页面的登录按钮 -->
    <style name="app_btn_big">
        <item name="android:layout_height">@dimen/btn_login_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginStart">@dimen/space_7</item>
        <item name="android:layout_marginEnd">@dimen/space_7</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/color_app_white</item>
    </style>

    <!--玩法说明表格style-->
    <style name="doubleColorDesc_tableTv_light">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/common_horizontal_line_min</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_f3f3f3</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <!--玩法说明表格style-->
    <style name="doubleColorDesc_tableTv">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/common_horizontal_line_min</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_FFFFFF</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>


    <!--玩法说明表格style-->
    <style name="ACDesc_tableTv">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/common_horizontal_line_min</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_FFFFFF</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <!--RadioButton style-->
    <style name="app_radioButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_bg_white_f7f7f7</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:drawableRight">@drawable/selector_radio_button_recharge</item>
    </style>

    <!-- 快三和值页面的btn -->
    <style name="sumFragment_btn">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_btn_round_sum_fragment</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_app_black</item>
    </style>

    <!-- 快三和值页面选择玩法的btn -->
    <style name="sumFragment_select_playStyle_btn">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingLeft">@dimen/space_5</item>
        <item name="android:paddingRight">@dimen/space_5</item>
        <item name="android:background">@drawable/selector_btn_round_sum_fragment_select_style
        </item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <!-- 11选5页面选择玩法的btn  -->
    <style name="eleven5_select_playStyle_btn" parent="sumFragment_select_playStyle_btn">
        <item name="android:onClick">onPlayStyleSelect</item>
    </style>

</resources>
