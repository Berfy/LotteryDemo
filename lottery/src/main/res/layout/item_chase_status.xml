<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent_ll_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chaseStatus_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/space_9"
            android:text="20180909"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/chaseStatus_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未追期"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_12"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/chaseStatus_win"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_12"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/chaseStatus_ward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未中奖"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_12"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

</LinearLayout>