<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_normal"
    android:orientation="vertical"
    tools:context="cn.zcgames.lottery.personal.view.activity.AboutUsActivity">

    <include layout="@layout/view_title_bar" />

    <LinearLayout
        android:id="@+id/mine_ll_version"
        style="@style/MineFragment_item_textView"
        android:paddingEnd="@dimen/font_15"
        android:paddingStart="@dimen/space_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="版本号"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="end|center_vertical"
            android:text="v1.0.0"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:background="@color/mine_line_color" />

    <LinearLayout
        android:id="@+id/us_ll_url"
        style="@style/MineFragment_item_textView"
        android:paddingEnd="@dimen/font_15"
        android:paddingStart="@dimen/space_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="网址"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_url"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="end|center_vertical"
            android:text="Http：//www.youcai1000.com"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:background="@color/mine_line_color" />

    <LinearLayout
        android:id="@+id/mine_ll_company"
        style="@style/MineFragment_item_textView"
        android:paddingEnd="@dimen/font_15"
        android:paddingStart="@dimen/space_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="公司"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="end|center_vertical"
            android:text="北京筑欣网络科技有限公司"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:background="@color/mine_line_color" />

</LinearLayout>
