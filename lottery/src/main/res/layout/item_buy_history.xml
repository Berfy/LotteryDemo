<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_rl_parentView"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/shape_bg_square"
    android:clickable="true"
    android:focusable="true"
    android:padding="0.2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_normal"
        android:paddingStart="15dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/positionTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#ff22ff"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/history_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/positionTv"
            android:gravity="center"
            android:text="å¿«3"
            android:textStyle="bold"
            android:textColor="@color/color_red_ball"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/history_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/history_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12" />

        </LinearLayout>

        <TextView
            android:id="@+id/history_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:drawablePadding="@dimen/space_10"
            android:layout_marginEnd="@dimen/space_15"
            android:drawableEnd="@drawable/btn_right"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_app_main"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>