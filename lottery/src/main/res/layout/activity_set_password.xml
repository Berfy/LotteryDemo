<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical"
    tools:context=".personal.view.activity.SetPasswordActivity">

    <include layout="@layout/view_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_vertical_margin"
        android:layout_marginRight="@dimen/common_vertical_margin"
        android:layout_marginTop="60dp"
        android:background="@color/mine_line_color"
        android:orientation="vertical"
        android:padding="@dimen/common_horizontal_line_min">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/label_login_password" />

            <EditText
                android:id="@+id/setPsw_et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/mine_input_password"
                android:layout_marginStart="@dimen/space_26"
                android:inputType="textPassword"
                android:maxLength="22"
                android:textColorHint="@color/color_999999"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="2dp"
            android:background="@color/color_DDDDDD" />

        <LinearLayout
            android:id="@+id/setPsw_ll_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/common_horizontal_line_min"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/label_login_password" />

            <EditText
                android:id="@+id/setPsw_et_confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/space_26"
                android:background="@null"
                android:hint="@string/mine_input_password_again"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColorHint="@color/color_9D9D9D"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="14sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="2dp"
            android:background="@color/color_DDDDDD" />

    </LinearLayout>

    <TextView
        android:id="@+id/register_tv_done"
        style="@style/app_btn_big"
        android:layout_marginTop="@dimen/space_40"
        android:text="@string/btn_register_done"/>
</LinearLayout>
