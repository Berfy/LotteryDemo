<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_30">

    <LinearLayout
        android:id="@+id/ll_sum_basic_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_basic_item_periods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:text="12期"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_85817d"
            android:gravity="center"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <TextView
            android:id="@+id/tv_award_nums"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:textColor="@color/color_a29e9a"
            android:textSize="@dimen/font_14"
            android:text="1 2 3"
            android:gravity="center"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <TextView
            android:id="@+id/tv_awards_sum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:textColor="@color/color_a29e9a"
            android:textSize="@dimen/font_14"
            android:text="6"
            android:gravity="center"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <TextView
            android:id="@+id/tv_awards_num_differ"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:textColor="@color/color_a29e9a"
            android:textSize="@dimen/font_14"
            android:text="1"
            android:gravity="center"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_first_num"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_centerInParent="true"
                android:textColor="@color/color_a29e9a"
                android:textSize="@dimen/font_14"
                android:text=""
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/iv_first_num"
                android:layout_width="@dimen/space_10"
                android:layout_height="@dimen/space_10"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_second_num"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_14"
                android:text=""
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/iv_second_num"
                android:layout_width="@dimen/space_10"
                android:layout_height="@dimen/space_10"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_third_num"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_centerInParent="true"
                android:textColor="@color/color_a29e9a"
                android:textSize="@dimen/font_14"
                android:text=""
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/iv_third_num"
                android:layout_width="@dimen/space_10"
                android:layout_height="@dimen/space_10"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_fourth_num"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:textColor="@color/color_a29e9a"
                android:textSize="@dimen/font_14"
                android:text=""
                android:layout_centerInParent="true"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/iv_fourth_num"
                android:layout_width="@dimen/space_10"
                android:layout_height="@dimen/space_10"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_fifth_num"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_centerInParent="true"
                android:textColor="@color/color_a29e9a"
                android:textSize="@dimen/font_14"
                android:text=""
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/iv_fifth_num"
                android:layout_width="@dimen/space_10"
                android:layout_height="@dimen/space_10"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sixth_num"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:textColor="@color/color_a29e9a"
                android:layout_centerInParent="true"
                android:textSize="@dimen/font_14"
                android:text=""
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/iv_sixth_num"
                android:layout_width="@dimen/space_10"
                android:layout_height="@dimen/space_10"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wait_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_30"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_wait_item_period"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:textColor="@color/color_85817d"
            android:textSize="@dimen/font_14"
            android:gravity="center"
            android:text="10期"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <TextView
            android:id="@+id/tv_wait_num_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11.4"
            android:textColor="@color/color_a29e9a"
            android:textSize="@dimen/font_14"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_20"
            android:text="等待开奖"/>

    </LinearLayout>

</RelativeLayout>