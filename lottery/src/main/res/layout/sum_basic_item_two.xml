<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_item_two"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_30"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_basic_item_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7.25"
        android:textColor="@color/color_504f58"
        android:textSize="@dimen/font_12"
        android:text="平均次数"
        android:gravity="center"/>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/color_d7d6d2"/>

    <TextView
        android:id="@+id/tv_first_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/color_504f58"
        android:textSize="@dimen/font_12"
        android:text="1"
        android:gravity="center"/>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/color_d7d6d2"/>

    <TextView
        android:id="@+id/tv_second_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/color_504f58"
        android:textSize="@dimen/font_12"
        android:text="2"
        android:gravity="center"/>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/color_d7d6d2"/>

    <TextView
        android:id="@+id/tv_third_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/color_504f58"
        android:textSize="@dimen/font_12"
        android:text="3"
        android:gravity="center"/>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/color_d7d6d2"/>

    <TextView
        android:id="@+id/tv_fourth_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/color_504f58"
        android:textSize="@dimen/font_12"
        android:text="4"
        android:gravity="center"/>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/color_d7d6d2"/>

    <TextView
        android:id="@+id/tv_fifth_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/color_504f58"
        android:textSize="@dimen/font_12"
        android:text="5"
        android:gravity="center"/>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/color_d7d6d2"/>

    <TextView
        android:id="@+id/tv_sixth_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/color_504f58"
        android:textSize="@dimen/font_12"
        android:text="6"
        android:gravity="center"/>

</LinearLayout>