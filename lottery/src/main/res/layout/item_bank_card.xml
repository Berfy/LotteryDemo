<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/bank_ll"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_bg_white_f7f7f7"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/bank_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/line1"
            layout="@layout/view_line_horizontal_one"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/line1"
            android:background="@color/color_FFFFFF">

            <ImageView
                android:id="@+id/bank_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/label_jianhang"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="中国建设银行（1234）"
                    android:textColor="@color/color_666666"/>

                <TextView
                    android:id="@+id/bank_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="张翠花"
                    android:textColor="@color/color_666666"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/delete_tv"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="@color/mine_line_color"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/color_FFFFFF"
        android:textSize="16dp"/>
</LinearLayout>