<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_form_div"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d7d6d2"/>

    <LinearLayout
        android:id="@+id/ll_form_item_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_form_trend_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:textColor="@color/color_504f58"
            android:textSize="@dimen/font_12"
            android:text="出现次数"
            android:gravity="center"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <TextView
            android:id="@+id/tv_three_num_same_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_504f58"
            android:textSize="@dimen/font_12"
            android:text="三同号"
            android:gravity="center"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <TextView
            android:id="@+id/tv_three_num_differ_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_504f58"
            android:textSize="@dimen/font_12"
            android:text="三不同"
            android:gravity="center"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <TextView
            android:id="@+id/tv_double_num_same_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_504f58"
            android:textSize="@dimen/font_12"
            android:text="二同号"
            android:gravity="center"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_d7d6d2"/>

        <TextView
            android:id="@+id/tv_double_num_differ_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_504f58"
            android:textSize="@dimen/font_12"
            android:text="二不同"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>