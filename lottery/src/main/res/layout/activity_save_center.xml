<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical"
    tools:context="cn.zcgames.lottery.personal.view.activity.SaveCenterActivity">

    <include layout="@layout/view_title_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="账号保护"
        android:textColor="@color/color_666666"
        android:textSize="14dp"/>

    <include layout="@layout/view_line_horizontal_one"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/save_rl_identify"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/selector_bg_white_f7f7f7"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="身份绑定"
                    android:textColor="@color/color_666666"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="提款领奖的凭证"
                    android:textColor="@color/color_999999"
                    android:textSize="11dp"/>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_horizontal_line_min"
            android:layout_marginLeft="20dp"
            android:background="@color/mine_line_color"/>

        <RelativeLayout
            android:id="@+id/save_rl_phone"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/selector_bg_white_f7f7f7"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="手机绑定"
                    android:textColor="@color/color_666666"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="用户信息及中奖提醒"
                    android:textColor="@color/color_999999"
                    android:textSize="11dp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_horizontal_line_min"
            android:layout_marginLeft="20dp"
            android:background="@color/mine_line_color"/>

        <RelativeLayout
            android:id="@+id/save_rl_loginPassword"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/selector_bg_white_f7f7f7"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="登录密码"
                        android:textColor="@color/color_666666"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/save_tv_pswLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="—未设置"
                        android:textColor="@color/color_app_main"
                        android:textSize="14dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="资金变动时需验证"
                    android:textColor="@color/color_999999"
                    android:textSize="11dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/view_line_horizontal_one"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="资金保护"
        android:textColor="@color/color_666666"
        android:textSize="14dp"/>

    <include layout="@layout/view_line_horizontal_one"/>

    <RelativeLayout
        android:id="@+id/save_rl_bankCard"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/selector_bg_white_f7f7f7"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="银行卡"
                    android:textColor="@color/color_666666"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/save_tv_bankLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="—未绑定"
                    android:textColor="@color/color_app_main"
                    android:textSize="14dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="绑定银行卡以便提款"
                android:textColor="@color/color_999999"
                android:textSize="11dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <include layout="@layout/view_line_horizontal_one"/>
</LinearLayout>
