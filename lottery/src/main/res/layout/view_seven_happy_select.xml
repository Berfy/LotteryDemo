<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_app_white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/seven_tv_normal"
            style="@style/sumFragment_select_playStyle_btn"
            android:layout_marginLeft="0dp"
            android:text="普通投注"
            android:textColor="@color/color_app_main"/>

        <TextView
            android:id="@+id/seven_tv_dantuo"
            style="@style/sumFragment_select_playStyle_btn"
            android:text="胆拖投注"/>


    </LinearLayout>

    <View
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_40000000"
        android:clickable="true"/>
</LinearLayout>